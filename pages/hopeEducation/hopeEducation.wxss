/* pages/hopeEducation/hopeEducation.wxss */
/* 引入模板wxss */
@import '/template/bannerPage/bannerPage.wxss';
@import '/template/bottomPage/bottomPage.wxss';
.pages{
  font-size:0;
}

.bannerPage {
  margin-top: -150rpx ;
  height: 410rpx;
}
.bannerPage .topBg{
  height: 410rpx;
}

.bannerPage .round{
  top: 145rpx;
}
.bannerPage .roundBox{
  top:189rpx;
}
.bannerPage .round .text{
  left: -55rpx;
  top: 4rpx;
  width: 200rpx;
}
.logoImg{
  width: 346rpx ;
  height: 62rpx;
  display: block;
  margin: 0 auto;
}
.hopeEducation{
 width: 700rpx;
 margin: 0 auto ;
}
.hopeEducation .itemBox{
  display: inline-block;
  width:335rpx;
  height: 525rpx;
  margin-bottom: 60rpx;
  border-bottom:  2rpx dotted #969696;
}

.hopeEducation .text{
  font-size: 22rpx;
  display: block;
  padding-top: 10rpx;
  text-align: center;
  color: rgb(0, 0, 0);
  line-height: 1.5;
}

.hopeEducation .itemBox:nth-child(even){
  padding-left: 30rpx;
}
.hopeEducation .itemBox .itemImg{
  width: 335rpx;
  height: 450rpx;
}
/* upload */
.upLoad{
  width: 750rpx;
  height: 50rpx;
  text-align:center;
  font-size: 20rpx;
  color: rgb(51, 51, 51);
}
.upLoad .all{
 color: #666
}
.upLoad .upLoadIcon{
  width: 20rpx;
  display: inline-block;
  height: 17rpx;
  margin-right:20rpx;
 vertical-align: middle;
}

.upLoad .loadingIcon{
 width: 19rpx;
 display: inline-block;
 height: 18rpx;
 margin-right:20rpx;
vertical-align: middle;
animation: loadingRotate 3s linear infinite;
}
@keyframes loadingRotate{from{transform: rotate(0deg)}
   to{transform: rotate(359deg)}
}