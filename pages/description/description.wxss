/* pages/description/description.wxss */
/* 引入模板wxss */
@import '/template/bannerPage/bannerPage.wxss';
@import '/template/bottomPage/bottomPage.wxss';
.pages{
  font-size:0;
}
/* 社会担当 */
.descriptionBox{
  position: relative;
  width: 750rpx;
  height: auto;
  min-height: 790rpx;
}

.descriptionBox .Bg{
  position: absolute;
  display: block;
  z-index: -1;
  top:0;
  right: 0;
  width:443rpx;
  height:443rpx;
}

.descriptionBox .Box{
  position: relative;
  display: block;
  top: 0;
  left: 0;
  width: 750rpx;
  min-height:500rpx ;
  padding-bottom: 50rpx;
  z-index: 0;
}





.descriptionBox .tophopeText{
  display: block;
  margin-top: 5rpx;
  width: 310rpx;
  height: 19rpx;
}

.descriptionBox .main{
 width: 725rpx;
margin-left: 25rpx;

}
.descriptionBox .main .itemBox{
  width: 362rpx;
  height: 220rpx;
  padding-left: 0rpx;
  font-size:0;
  padding-top:25rpx;
  display: inline-block;
  vertical-align: top;
  margin: 0 auto;
  margin-top: 50rpx;
  position: relative;
  border-bottom: 1rpx dotted #969696 ;
}
.descriptionBox .main .itemBox .imgBox{
  height: 220rpx;
  width: 340rpx;
  top: 0;
  left: 0;
  overflow: hidden;
  border-radius: 6rpx;
  display: block;
  position: absolute;
  z-index: 1;
}
.descriptionBox .main .itemBox .itemImg{
  height: 205rpx;
  width: 330rpx;
  display: block;
  
}
.descriptionBox .main .itemBox .itemText{
  width: 285rpx;
  padding:30rpx 65rpx 0 120rpx;
  height: 190rpx;
  display: inline-block;
  background: #fff;
  position: relative;
  z-index: 0;
  border-radius: 6rpx;
  box-shadow: 0 0rpx 5rpx 0 rgba(0, 0, 0, 0.3);
}

.descriptionBox .main .itemBox .text{
    font-size: 22rpx;
    text-align: justify;
    display: block;
    color: rgb(0, 0, 0);
    line-height: 1.636;
    min-height: 120rpx;
}

.descriptionBox .main .itemBox .time{
    display: block;
    text-align: right ;
    font-size: 16rpx;
    color: rgb(200, 200, 200);
    line-height: 1.2;
}

.descriptionBox .main .itemBox .bottom{
   display: block;
   width: 390rpx;
   padding-left: 80rpx;
   height: 18rpx;
   padding-top: 1rpx;
   top: 20rpx;
   left: -120rpx;
   position: relative;
   background: #f5f5f5;

}

/* upload */
.upLoad{
   width: 750rpx;
   height: 50rpx;
   text-align:center;
   font-size: 20rpx;
   color: rgb(51, 51, 51);
}
.upLoad .all{
  color: #666
}
.upLoad .upLoadIcon{
   width: 20rpx;
   display: inline-block;
   height: 17rpx;
   margin-right:20rpx;
  vertical-align: middle;
}

.upLoad .loadingIcon{
  width: 19rpx;
  display: inline-block;
  height: 18rpx;
  margin-right:20rpx;
 vertical-align: middle;
 animation: loadingRotate 3s linear infinite;
}
@keyframes loadingRotate{from{transform: rotate(0deg)}
    to{transform: rotate(359deg)}
}
