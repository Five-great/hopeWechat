/* pages/videoXW/videoXW.wxss */
/* 引入模板wxss */
@import '/template/bannerPage/bannerPage.wxss';
@import '/template/bottomPage/bottomPage.wxss';
.pages{
  font-size:0;
}
.bannerPage .topBg{
  display: block;
  position: absolute;
  top: -150rpx;
  left: 0;
  width: 750rpx;
  height: 410rpx;
  z-index: -1;
}
/* 视频希望 */
.videoBox{
  position: relative;
  width: 750rpx;
  height: auto;
  min-height: 790rpx;
}

.videoBox .Bg{
  position: absolute;
  display: block;
  z-index: -1;
  top:0;
  right: 0;
  width:443rpx;
  height:443rpx;
}

.videoBox .Box{
  position: relative;
  display: block;
  top: 0;
  left: 0;
  width: 750rpx;
  min-height:500rpx ;
  padding-bottom: 50rpx;
  z-index: 0;
}

.videoBox  .tophopeText{
  display: block;
  margin-top: 5rpx;
  width: 310rpx;
  height: 19rpx;
}

.videoBox .main{

}
.videoBox .main .itemBox{
  width: 700rpx;
  display: block;
  margin: 0 auto;
  margin-top: 30rpx;
  position: relative;
}

.videoBox .main .itemBox .imgBox{
  height: 150rpx;
  width: 250rpx;
  top: 0;
  left: 0;
  overflow: hidden;
  border-radius: 6px;
  display: block;
  position: absolute;
  z-index: 1;
}
.videoBox .main .itemBox .itemImg{
  height: 150rpx;
  width: 250rpx;
  display: block;
  
}

.videoBox .main .itemBox .itemText{
  width: 380rpx;
  padding: 30rpx 35rpx 0 282rpx;
  height: 120rpx;
  display: inline-block;
  background: #fff;
  position: relative;
  z-index: 0;
  border-radius: 6rpx;
  box-shadow: 0 0rpx 5rpx 0 rgba(0, 0, 0, 0.3);
}

.videoBox .main .itemBox  .itemButton{
  float: right;
  width: 110rpx;
  height: 30rpx;
  background: #c31300;
  margin-top: -50rpx;
  border-radius: 40rpx;
  text-align: center ;
  font-size: 18rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
  line-height: 30rpx;
  letter-spacing: 1rpx;
}
.videoBox .main .itemBox .text{
    font-size: 22rpx;
    text-align: justify;
    display: block;
    color: rgb(0, 0, 0);
    line-height: 1.636;
    min-height: 120rpx;
}

.videoBox .main .itemBox .bottom{
   display: block;
   width: 390rpx;
   padding-left: 80rpx;
   height: 18rpx;
   padding-top: 1rpx;
   top: 0rpx;
   left: -120rpx;
   position: relative;
   background: #f5f5f5;

}
.videoBox .main .itemBox .bottom .bottomImg{
  display: inline-block;
  position: relative;
  top: 0rpx;
  width: 374rpx;
  height: 17rpx;
}

/* upload */
.upLoad{
   width: 750rpx;
   height: 50rpx;
   text-align:center;
   font-size: 20rpx;
   color: rgb(51, 51, 51);
}
.upLoad .all{
  color: #666
}
.upLoad .upLoadIcon{
   width: 20rpx;
   display: inline-block;
   height: 17rpx;
   margin-right:20rpx;
  vertical-align: middle;
}

.upLoad .loadingIcon{
  width: 19rpx;
  display: inline-block;
  height: 18rpx;
  margin-right:20rpx;
 vertical-align: middle;
 animation: loadingRotate 3s linear infinite;
}
@keyframes loadingRotate{from{transform: rotate(0deg)}
    to{transform: rotate(359deg)}
}

/* videoShow */
#videoID{
  width: 750rpx;
  height: 425rpx;
}

.videoTitle{
  padding-top: 55rpx;
  width: 700rpx;
  margin: 0 auto ;
  font-size: 30rpx;
  color: #000;
  letter-spacing: 2rpx;
}

.text-page{
  display: inline-block;
  vertical-align: top;
   width: 325rpx;
   margin: 25rpx;
   font-size: 0rpx;
 
}
.text-page .topTitle{
  display: block;
  width: 325rpx;
  height: 50rpx;
  font-size: 30rpx;
  color: #000;
}
.text-page:first-child text{
  text-align: left;
}
.text-page text{
  display:block;
  font-size: 30rpx;
  color: #c31300;
  text-align: right;
  letter-spacing: 2rpx;
}

.lineBox{
  display: block;
  width: 750rpx;
  height: 10rpx;
  background: #f2f2f2;
}